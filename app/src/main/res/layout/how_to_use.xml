<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:text="How To Use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:layout_marginTop="4dp"/>
    <TextView
        android:text="  1. Register yourself by using your IIT Mandi Webmail.Confirmation mail will be sent to this email."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="4dp"/>
    <TextView
        android:text="  2. After registration login into your account and switch to order section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="4dp"/>
    <TextView
        android:text="  3. You can see list of online vendors and their pending orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="4dp"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/vendor_det"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:text="  4. Choose a vendor , check the menu and select the quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="4dp"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/order_item"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:text="  5. Place the order and see updates in Order DashBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="4dp"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/order_dash"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
</ScrollView>