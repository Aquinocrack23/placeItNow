    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@+id/password_til"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/lb_action_text_size" />

    <TextView
        android:text="PlaceItNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:forceHasOverlappingRendering="true"
        android:textSize="@dimen/lb_details_description_title_text_size"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:text="Forgot password? Click here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/info2"
        android:layout_below="@+id/info1"
        android:layout_alignStart="@+id/info1"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:text="How To Use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/how_to_use"
        android:layout_below="@+id/info2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/cardview_light_background" />
</RelativeLayout>
