<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="16dp"
        android:id="@+id/user_prof">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/acc"
            android:padding="8dp"/>
        <TextView
            android:text="User Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:text="Online Orders"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_prof"
        android:id="@+id/text_online"
        android:textSize="15sp"
        android:layout_marginTop="40dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_below="@+id/text_online"
        android:padding="16dp"
        android:layout_marginStart="3dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/online_orders">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_action_order_history"
                android:padding="6dp"/>
            <TextView
                android:text="Order History"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="left"/>
            </LinearLayout>

            <View
                android:layout_width="330dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_action_book_green"
                    android:padding="6dp"/>
                <TextView
                    android:text="Address Book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="left"/>
            </LinearLayout>

            <View
                android:layout_width="330dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_action_coupon_green"
                    android:padding="6dp"/>
                <TextView
                    android:text="PlaceItNow Credits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="left"/>
            </LinearLayout>

            <View
                android:layout_width="330dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_action_bookmark_green"
                    android:padding="6dp"/>
                <TextView
                    android:text="Bookmarked Meals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="left"/>
            </LinearLayout>

            <View
                android:layout_width="330dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_action_order_history"
                    android:padding="6dp"/>
                <TextView
                    android:text="Order History"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="left"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:text="Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/online_orders"
        android:id="@+id/edit_acc"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_below="@+id/edit_acc"
        android:padding="16dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/online_orders_settings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_action_add_red"
                    android:padding="6dp"/>
                <TextView
                    android:text="Edit User Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="left"/>
            </LinearLayout>

            <View
                android:layout_width="330dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_action_star"
                    android:padding="6dp"/>
                <TextView
                    android:text="Rate Us on Playstore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="left"/>
            </LinearLayout>

            <View
                android:layout_width="330dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_action_heart"
                    android:padding="6dp"/>
                <TextView
                    android:text="About"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="left"/>
            </LinearLayout>

            <View
                android:layout_width="330dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_action_info"
                    android:padding="6dp"/>
                <TextView
                    android:text="Send Feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="left"/>
            </LinearLayout>

            <View
                android:layout_width="330dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_action_out"
                    android:padding="6dp"/>
                <TextView
                    android:text="Sign Out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="left"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</ScrollView>